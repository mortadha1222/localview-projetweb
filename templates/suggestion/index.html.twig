{% extends 'front.html.twig' %}

{% block title %}Suggestion index{% endblock %}

{% block body %}
    <h1>Suggestion index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Answer</th>
                <th>IdUser</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for suggestion in suggestions %}
            <tr>
                <td>{{ suggestion.id }}</td>
                <td>{{ suggestion.title }}</td>
                <td>{{ suggestion.description }}</td>
                <td>{{ suggestion.answer }}</td>
                <td>{{ suggestion.idUser }}</td>
                <td>{{ suggestion.date ? suggestion.date|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('suggestion_show', {'id': suggestion.id}) }}"class="btn btn-outline-success">show</a>
                    <a href="{{ path('suggestion_edit', {'id': suggestion.id}) }}"class="btn btn-outline-danger">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('suggestion_new') }}"class="btn btn-outline-primary">Create new</a>
{% endblock %}
