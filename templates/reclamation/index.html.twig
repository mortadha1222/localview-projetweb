{% extends 'front.html.twig' %}

{% block title %}Reclamation index{% endblock %}

{% block body %}
    <h1>Reclamation index</h1>


    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Answer</th>

                <th>Date</th>

                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reclamation in reclamations %}
            <tr>
                {% if reclamation.archive != "archive" %}
                <td>{{ reclamation.id }}</td>
                <td>{{ reclamation.title }}</td>
                <td>{{ reclamation.description }}</td>
                <td>{{ reclamation.answer }}</td>

                <td>{{ reclamation.date ? reclamation.date|date('Y-m-d') : '' }}</td>

                <td>
                    <a href="{{ path('reclamation_show', {'id': reclamation.id}) }}" class="btn btn-outline-success">show</a>
                    <a href="{{ path('reclamation_edit', {'id': reclamation.id}) }}" class="btn btn-outline-danger">edit</a>
                    <a href="{{ path('reclamation_archiver', {'id': reclamation.id}) }} "class="btn btn-outline-warning">archiver</a>
                </td>
        {% endif %}
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('reclamation_new') }}"class="btn btn-outline-primary">Create new</a>
    <a href="{{ path('archive') }} "class="btn btn-outline-warning ">archive</a>
{% endblock %}
